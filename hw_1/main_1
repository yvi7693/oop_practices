# task1

# Сущность - животное

# Поля:
# имя
# возраст
# вид животного
# звук животного


class Animal:
    name: str
    age: int
    type: str
    sound: str


    def __init__(self, name: str, age: int, type: str, sound: str):
        self.name = name
        self.age = age
        self.type = type
        self.sound = sound


    def bark(self) -> str:

        return f"Животное издает звук {self.sound}"


    def __str__(self):
        return f"Имя животного: {self.name} \nВозраст животного: {self.age} \nТип животного {self.type} \nЗвук животного {self.sound}"




# task2

# Сущность - книга

# Поля:
# - наименование книги
# - автор книги
# - количество страниц


class Book:
    tittle: str
    author: str
    count_page: int

    def __init__(self, tittle: str, author: str, count_page: int):
        self.tittle = tittle
        self.author = author
        self.count_page = count_page


    def __str__(self):
        return f"Наименование книги: {self.tittle} \nАвтор книги: {self.author} \nКоличество страниц: {self.count_page}"



    def open_page(self, number_page: int) -> str | None:
        if number_page > self.count_page or number_page < 0:
            raise ValueError()

        return f"Страница {number_page} открыта"








# task3

# Сущность - Пассажирский самолет

# Поля:
# - производитель самолета
# - модель самолета
# - вместимость пассажиров
# - текущая высота
# - текущая скорость


class PassengerPlane:
    manufactured: str
    model: str
    passenger_capacity: int
    current_height: float
    current_speed: float
    max_height: float
    min_height: float
    max_speed: float


    def __init__(self, manufactured: str, model: str, passenger_capacity: int, current_height: float, current_speed: float, max_height: float, min_height: float, max_speed: float):
        self.manufactured = manufactured
        self.model = model
        self.passenger_capacity = passenger_capacity
        self.current_height = current_height
        self.current_speed = current_speed
        self.max_height = max_height
        self.min_height = min_height
        self.max_speed = max_speed



    def __str__(self):
        return f"Производитель самолёта: {self.manufactured} \nМодель самолёта: {self.model} \nВместимость пассажиров: {self.passenger_capacity} \nТекущая высота: {self.current_height} \nТекущая скорость: {self.current_speed}"


    def take_off(self) -> str:
        return "Самолёт взлетел!"


    def landing(self) -> str:
        return "Самолёт приземлился!"


    def set_height(self, new_height: float) -> None:

        if new_height > self.min_height and new_height < self.max_height:
            self.current_height = new_height




    def set_speed(self, new_speed: float) -> None:

        if new_speed < self.max_speed:
            self.current_speed = new_speed





#     Сущность - Музыкальный альбом

# Поля:
# - исполнитель
# - название альбома
# - жанр
# - список треков


class MusicAlbum:
    singer: str
    name: str
    genre: str
    tracks: list[str]


    def __str__(self):
        return f"Исполнитель: {self.singer} \nНаименование альбома: {self.name} \nЖанр: {self.genre} \nСписок треков: {self.tracks}"


    def add_track(self, track: str) -> None:
        self.tracks += track


    def delete_track(self, track: str) -> None:

        for i in range(len(self.tracks)):

            if self.tracks[i] == track:
                self.tracks.pop(i)



    def play_track(self, track: str) -> str:

        for i in range(len(self.tracks)):

            if self.tracks[i] == track:
                return f"Воспроизводится {track}"

        return f"Трек {track} не найден"



